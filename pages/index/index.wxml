<view class="content">
  <swiper autoplay="true" interval="3000" duration="1000">
    <block wx:for="{{imgUrls}}">
      <swiper-item>
        <image src="{{item}}" class="img_sty" />
      </swiper-item>
    </block>
  </swiper>
</view>


<view class="notification">

  <view class="time">
    <view class="date_place">{{day}}</view>
    <view class="weekday">星期{{week[date]}}
      <view class="year_month">{{year}}年{{month}}月</view>
    </view>
    <view class="countdown">第2轮选导开始还有93天</view>
  </view>
<view class="hr"></view>
  <view class="notice_line">
    <text class="notice_text">浙江工业大学硕士研究生第一轮导师选择注意事项</text>
  </view>
  <view class="notice_line">
    <text class="notice_text">第一轮导师选择填报须知</text>
  </view>
  <view class="notice_line">
    <text class="notice_text">研究生报道通知</text>
  </view>
  <view class="notice_line">
    <text class="notice_text">2017-2018学年日历</text>
  </view>
</view>

<view class="notification">
  <view class="notice_head">"最选导"系统简介:</view>
  <view class="instruction">
    <text decode="emsp">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;{{instrucion}}</text>
  </view>
</view>